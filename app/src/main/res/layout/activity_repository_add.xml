<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_public_topbar" />

    <include layout="@layout/include_view_layout_line" />

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <include layout="@layout/include_view_layout_line" />

    <LinearLayout style="@style/ModuleMoreRepositoryLookLinearLayoutStyle">

        <TextView
            style="@style/ModuleMoreRepositoryNameKeyStyle"
            android:text="名称" />

        <include layout="@layout/include_view_fill_width" />

        <EditText
            android:id="@+id/editText1"
            style="@style/ModuleMoreRepositoryNameValueStyle"
            android:background="#00000000"
            android:hint="请填写" />
    </LinearLayout>

    <include layout="@layout/include_view_layout_line" />

    <LinearLayout style="@style/ModuleMoreRepositoryLookLinearLayoutStyle">

        <TextView
            style="@style/ModuleMoreRepositoryNameKeyStyle"
            android:text="负责人" />

        <include layout="@layout/include_view_fill_width" />

        <EditText
            android:id="@+id/editText2"
            style="@style/ModuleMoreRepositoryNameValueStyle"
            android:background="#00000000"
            android:hint="请填写" />
    </LinearLayout>

    <include layout="@layout/include_view_layout_line" />

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <include layout="@layout/include_view_layout_line" />

    <LinearLayout style="@style/ModuleMoreRepositoryLookLinearLayoutStyle">

        <TextView
            style="@style/ModuleMoreRepositoryNameKeyStyle"
            android:text="启用" />

        <include layout="@layout/include_view_fill_width" />

        <ch.ielse.view.SwitchView
            android:id="@+id/switchView_open"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <include layout="@layout/include_view_layout_line" />

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <include layout="@layout/include_view_layout_line" />

    <LinearLayout style="@style/ModuleMoreRepositoryLookLinearLayoutStyle">

        <TextView
            style="@style/ModuleMoreRepositoryNameKeyStyle"
            android:text="备注" />

        <include layout="@layout/include_view_fill_width" />

        <EditText
            android:id="@+id/editText3"
            style="@style/ModuleMoreRepositoryNameValueStyle"
            android:background="#00000000"
            android:hint="请填写" />
    </LinearLayout>

    <include layout="@layout/include_view_layout_line" />

</LinearLayout>