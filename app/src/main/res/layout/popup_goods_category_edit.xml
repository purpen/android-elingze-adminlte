<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99999999"
    android:orientation="vertical">

    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_view_separate_vertical_10dp" />


    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/textView_goods_category_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="删除" />

        <View
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView_goods_category_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="保存" />
    </LinearLayout>
</LinearLayout>