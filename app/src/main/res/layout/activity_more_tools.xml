<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_public_topbar" />

    <include layout="@layout/include_view_line_divider_vertical" />


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#287ff0f0" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <TextView
        style="@style/CommonTextViewTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="仓库助手" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <LinearLayout
        android:id="@+id/linearLayout_more_stock_export"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            style="@style/CommonEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码出库"
            android:layout_marginTop="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <include layout="@layout/include_view_line_divider_vertical" />

    <TextView
        style="@style/CommonTextViewTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="订货助手" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <LinearLayout
        android:id="@+id/linearLayout_more_scan_order"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            style="@style/CommonEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码下单"
            android:layout_marginTop="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <include layout="@layout/include_view_line_divider_vertical" />
</LinearLayout>