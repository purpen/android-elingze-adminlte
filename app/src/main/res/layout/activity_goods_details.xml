<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/include_public_topbar" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <com.thn.erp.view.autoScrollViewpager.ScrollableView
        android:id="@+id/scrollableView"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nut 智能寻物防丢贴片 "
            android:textColor="#222222" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nut 智能寻物防丢贴片 "
                android:textColor="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nut 智能寻物防丢贴片 "
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nut 智能寻物防丢贴片 "
                    android:textColor="#27AE59" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_view_line_divider_vertical" />

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutArrowTextView
            android:id="@+id/linearLoutArrowTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutCommonTextView
            android:id="@+id/linearLoutCommonTextViewTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutCommonTextView
            android:layout_width="match_parent"
            android:id="@+id/linearLoutCommonTextViewTextView2"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />
    </LinearLayout>

    <include layout="@layout/include_view_separate_vertical_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutArrowTextView
            android:layout_width="match_parent"
            android:id="@+id/linearLoutArrowTextView2"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutCommonTextView
            android:layout_width="match_parent"
            android:id="@+id/linearLoutCommonTextViewTextView3"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />

        <com.thn.erp.view.common.LinearLayoutCommonTextView
            android:layout_width="match_parent"
            android:id="@+id/linearLoutCommonTextViewTextView4"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_view_line_divider_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送至"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:textColor="#222222" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>