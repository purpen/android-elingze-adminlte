<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:fitsSystemWindows="true">

    <com.thn.erp.view.CustomHeadView
        android:id="@+id/customHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customHeadView"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:layout_below="@+id/customName"
                android:layout_marginTop="@dimen/dp5"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_alignParentTop="true"
                    android:background="@color/color_eee"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_eee"
                    />
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/sp15"
                    android:paddingRight="@dimen/dp10"
                    android:src="@mipmap/icon_address" />

                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp10"
                    android:src="@mipmap/icon_arrow_more" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_toLeftOf="@+id/ivMore"
                    android:layout_toRightOf="@id/iv"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines = "1"
                        android:textColor="@color/color_222"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:textColor="@color/color_222"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvName"
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines = "1"
                        android:textColor="@color/color_222"
                        android:textSize="@dimen/sp12"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/tvNoAddressTips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/set_address"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_item_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f4"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/linearLayout_sumary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:text="备注：" />

                <TextView
                    android:id="@+id/textView_sumary"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number"
                    android:text="订单号"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number_order_details"
                    android:layout_toRightOf="@+id/tv_number"
                    android:textColor="@color/color_222" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_logistics_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number_logistics_company"
                    android:text="物流公司"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_logistics_company_number_order_details"
                    android:layout_toRightOf="@+id/tv_number_logistics_company"
                    android:textColor="#333333" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_logistics_number"
                >

                <TextView
                    android:id="@+id/tv_number_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流单号："
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_logistics_number_order_details"
                    android:layout_toRightOf="@+id/tv_number_logistics"
                    android:textColor="#333333" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_payway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_payway_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_payway"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="#333333" />
            </RelativeLayout>



            <com.thn.erp.view.CustomItemLayout
                android:id="@+id/freight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.thn.erp.view.CustomItemLayout
                android:id="@+id/sumPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.thn.erp.view.CustomItemLayout
                android:id="@+id/reducedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.thn.erp.view.CustomItemLayout
                android:id="@+id/realPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bt_call_order_details"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="#666666"
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>

