<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:background="@color/color_27AE59"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="@dimen/dp45"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/dp8"
        android:scaleType="fitXY"
        android:src="@mipmap/back_white" />

    <com.thn.erp.view.SearchView
        android:id="@+id/searchView"
        style="@style/StyleSearchView"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/ibBack"
        android:layout_marginRight="@dimen/dp45"
        android:background="@drawable/bg_circle_green_dark"
        android:layout_centerInParent="true"
        android:drawableStart="@mipmap/search_white"
        android:hint="搜索商品"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp12" />

</RelativeLayout>