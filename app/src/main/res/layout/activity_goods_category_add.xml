<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_public_topbar" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_view_line_divider_vertical" />


    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/include_view_line_divider_vertical" />

    <com.thn.erp.view.common.LinearLayoutCustomerAddEditTextView
        android:id="@+id/addEditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_circle_green">

        <TextView
            android:id="@+id/textView_goods_category_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="保存" />
    </LinearLayout>
</LinearLayout>